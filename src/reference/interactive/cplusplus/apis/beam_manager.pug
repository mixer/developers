extends ../../../reference_layout.pug
block title
    | Interactive API Reference | Beam Developers

block navbar
    .navbar-wrapper
        .container
            nav.navbar.navbar-inverse: +navbar()
            h1 Interactive Reference Documentation
block menu
    .hidden-print.rest-sidebar(role='complementary')
        nav
            ul.nav.nav-stacked
                include ../menus/menu_beam_manager.pug
block reference
    h1(id=`${interactive.api[2].name}__${interactive.api[2].type}`)= interactive.api[2].name+" "+interactive.api[2].type
    p= interactive.api[2].description 

    h2(id=`${interactive.api[2].name}__declaration`) Declaration
    
        if interactive.api[2].syntax
        .panel.panel-default.panel-rest
                    .panel-body
                        h3.panel-title= interactive.api[2].syntax.code
                        
    if interactive.api[2].constructor_class
         h2(id=`${interactive.api[2].name}__constructor`) Constructor
        
         for key in interactive.api[2].constructor_class
             if key.description
                 h3(id=`${interactive.api[2].name}__${key.name}`)= key.name
                
                 table.table
                     tr
                         td= key.description
                        
                 .panel.panel-default.panel-rest
                     .panel-body
                         h3.panel-title= key.code

    if interactive.api[2].destructor_class
        h2(id=`${interactive.api[2].name}__destructor`) Destructor
        
        for key in interactive.api[2].destructor_class
            if key.name
                h3(id=`${interactive.api[2].name}__${key.name}`)= key.name
                
                table.table
                    tr
                        td= key.description
                        
                .panel.panel-default.panel-rest
                    .panel-body
                        h3.panel-title= key.code
                          
    if interactive.api[2].methods
        h2(id=`${interactive.api[2].name}__methods`) Methods
    
        for key in interactive.api[2].methods
            if key.description
                h3(id=`${interactive.api[2].name}__${key.name}`)= key.name
            
                table.table
                    tr
                        td= key.description
                    
                .panel.panel-default.panel-rest
                    .panel-body
                        h3.panel-title= key.code
                        
                if key.params
                    h4 Parameters
                    table.table
                        for parameter in key.params
                            tr
                                td.col-xs-4: code= parameter.param_name
                                td.col-xs-8= parameter.param_type
                            tr
                                td(colspan='2')= parameter.param_description

                if key.return_type
                    h4 Returns
                    p: code= key.return_type
                    p= key.return_description

    if interactive.api[2].properties
            h2(id=`${interactive.api[2].name}__properties`) Properties
        
            for key in interactive.api[2].properties
                if key.description
                    h3(id=`${interactive.api[2].name}__${key.name}`)= key.name
                
                    table.table
                        tr
                            td= key.description
                        
                    .panel.panel-default.panel-rest
                        .panel-body
                            h3.panel-title= key.code
                    if key.property_type
                        h4 Returns
                        p: code= key.property_type
                        p= key.property_description

    if interactive.api[2].enums
            h2(id=`${interactive.api[2].name}__fields`) Fields
    
            table.table
                for key in interactive.api[2].enums
                    if key.description
                        tr  
                            td= key.name
                            td= key.description